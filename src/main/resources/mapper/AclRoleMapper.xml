<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.knightzz.mapper.AclRoleMapper">

    <resultMap id="BaseResultMap" type="cn.knightzz.entity.AclRole">
        <id property="id" column="id" jdbcType="CHAR"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="roleCode" column="role_code" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="isDeleted" column="is_deleted" jdbcType="BOOLEAN"/>
        <result property="createTime" column="gmt_create" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="gmt_modified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,role_name,role_code,
        remark,is_deleted,gmt_create,
        gmt_modified
    </sql>
    <select id="selectRoleByUserId" resultType="cn.knightzz.entity.AclRole">
        select ar.*
        from acl_user_role as aur
                 join acl_role as ar on aur.role_id = ar.id
        where user_id = #{id}
          and aur.is_deleted = 0
          and ar.is_deleted = 0;
    </select>
</mapper>
