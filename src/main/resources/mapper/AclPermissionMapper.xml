<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.knightzz.mapper.AclPermissionMapper">

    <resultMap id="BaseResultMap" type="cn.knightzz.entity.AclPermission">
        <id property="id" column="id" jdbcType="CHAR"/>
        <result property="pid" column="pid" jdbcType="CHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="TINYINT"/>
        <result property="permissionValue" column="permission_value" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="component" column="component" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="isDeleted" column="is_deleted" jdbcType="BOOLEAN"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,pid,name,
        type,permission_value,path,
        component,icon,status,
        is_deleted,create_time,update_time
    </sql>
    <!-- 根据用户id获取用户权限值-->
    <select id="selectPermissionValueByUserId" resultType="java.lang.String">
        select ap.permission_value
        from acl_user_role as aur
                 inner join acl_role_permission as arp on aur.role_id = arp.role_id
                 inner join acl_permission as ap on ap.id = arp.permission_id
        where aur.user_id = #{id}
          and ap.type = 2
          and aur.is_deleted = 0
          and arp.is_deleted = 0
          and ap.is_deleted = 0;
    </select>
    <!-- 获取全部权限值 -->
    <select id="selectAllPermissionValue" resultType="java.lang.String">
        select ap.permission_value
        from acl_user_role as aur
                 inner join acl_role_permission as arp on aur.role_id = arp.role_id
                 inner join acl_permission as ap on ap.id = arp.permission_id
        where ap.type = 2
          and aur.is_deleted = 0
          and arp.is_deleted = 0
          and ap.is_deleted = 0;
    </select>
    <!-- 获取当前用户对应角色的所有权限信息-->
    <select id="selectPermissionByUserId" resultType="cn.knightzz.entity.AclPermission">
        select ap.*
        from acl_user_role as aur
                 inner join acl_role_permission as arp on aur.role_id = arp.role_id
                 inner join acl_permission as ap on ap.id = arp.permission_id
        where aur.user_id = #{id}
          and aur.is_deleted = 0
          and arp.is_deleted = 0
          and ap.is_deleted = 0;
    </select>
</mapper>
