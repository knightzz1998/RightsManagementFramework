<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.knightzz.mapper.AclUserRoleMapper">

    <resultMap id="BaseResultMap" type="cn.knightzz.entity.AclUserRole">
        <id property="id" column="id" jdbcType="CHAR"/>
        <result property="roleId" column="role_id" jdbcType="CHAR"/>
        <result property="userId" column="user_id" jdbcType="CHAR"/>
        <result property="isDeleted" column="is_deleted" jdbcType="BOOLEAN"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,role_id,user_id,
        is_deleted,create_time,update_time
    </sql>
    <!-- 根据用户id查询用户角色列表-->
    <select id="getRoleListByUserId" resultType="cn.knightzz.entity.AclRole">
        select ar.*
        from acl_user_role as aur
                 join acl_role as ar on aur.role_id = ar.id
        where aur.user_id = #{id};
    </select>
</mapper>
